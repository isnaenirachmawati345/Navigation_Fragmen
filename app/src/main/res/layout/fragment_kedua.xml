<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentKedua"
    android:padding="10dp"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="45dp"
        android:text="@string/masuk_hitung_bep_friendly_shop"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/img"
        android:scaleX="0.6"
        android:scaleY="0.5"
        android:layout_marginBottom="23dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/silahkan_masukan_nama_anda"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        />

    <EditText
        android:id="@+id/edit_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_edit"
        android:hint="@string/nama_kamu"
        android:inputType="text"
        android:gravity="center"
        android:minHeight="48dp" />
    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:text="@string/go_to_screen_3"
        android:textColor="@color/white"/>


</LinearLayout>